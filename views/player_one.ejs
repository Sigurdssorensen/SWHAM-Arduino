<% include partials/header %>

<!-- PLAYER ONE -->
<div class="container-fluid" id="player_one_screen">
    <div class="row header-row">
        <div class="col-4 command-window">
            <div class="row justify-content-center">
                <div class="col-2">
                    <!-- Empty space -->
                </div>

                <div class="col-8 command-window-inner">
                    <div class="row" id="command-window-textfield-p1">
                        <p>Game starts in <strong>5</strong> seconds</p>
                    </div>
                </div>

                <div class="col-2">
                    <!-- Empty space -->
                </div>
                <p>The command window</p>
            </div>
        </div>

        <div class="col-3">
            <div class="row">
                <div class="col-12" id="reactor-heat-level">
                    <!-- The artwork (2. gauge) below has been sourced from:
                    https://pixabay.com/no/gauge-ikoner-ytelse-rodentia-ikoner-1294568/
                    The artwork appears in its original form -->
                    <img id="gauge-img" src="\img\gauge-1294568_1280.png" alt="Heat Gauge.">
                    <!-- End of artwork (2. gauge) -->
                    <p class="description-text">Reactor Heat Level</p>
                </div>
            </div>

            <div class="row">
                <div class="col-6" id="heat-warning-one">
                    <!-- The artwork (3. flash) below has been sourced from:
                    https://pixabay.com/no/advarselslampen-flash-veiarbeid-160180/
                    The artwork appears in its original form. -->
                    <img id="warning-img-yellow" src="\img\warning-yellow.png" alt="lit Warning Lamp">
                    <!-- End of artwork (3. flash) -->
                    <br>
                    <p class="description-text">Heat Warning One</p>
                </div>

                <div class="col-6" id="heat-warning-two">
                    <!-- The artwork (3. flash) below has been altered from:
                    https://pixabay.com/no/advarselslampen-flash-veiarbeid-160180/
                    The artwork's colour has been altered to fit the project need. -->
                    <img id="warning-img-red" src="\img\warning-grey.png" alt="Unlit Warning Lamp">
                    <!-- End of artwork (3. flash) -->
                    <p class="description-text">Heat Warning Two</p>
                </div>
            </div>
        </div>

        <div class="col-1" id="overdrive-mode-heat">
            <div class="row">
                <div class="col-2 empty-space">
                    <!-- Empty space -->
                </div>
                <div class="col-8">
                    <div class="overdrive-temperature-outer">
                        <div class="overdrive-temperature-inner">
                            <div class="overdrive-temperature-increase"></div>
                        </div>
                    </div>
                </div>
                <div class="col-2 empty-space">
                    <!-- Empty space -->
                </div>
            </div>
        </div>

        <div class="col-4">
            <div class="row">
                <div class="col-3">
                    <button id="cooling-system-one-btn" type="button" class="btn-warning btn-primary">Valve One</button>
                </div>
                <div class="col-3">
                    <button id="cooling-system-two-btn" type="button" class="btn-warning btn-primary">Valve Two</button>
                </div>
                <div class="col-3">
                    <button id="cooling-system-three-btn" type="button" class="btn-warning btn-primary">Valve Three</button>
                </div>
                <div class="col-3">
                    <button id="cooling-system-four-btn" type="button" class="btn-warning btn-primary">Valve Four</button>
                </div>
            </div>
            <div class="row justify-content-center">
                <p>Safety Valves</p>
            </div>

            <div class="row" id="cooling-system-one">
                <div class="col-8">
                    <p class="cooling-text">Sector 1 - Cooling System</p>
                </div>
                <div class="col-4">
                    <!-- The artwork (3. flash) below has been altered from:
                    https://pixabay.com/no/advarselslampen-flash-veiarbeid-160180/
                    The artwork's colour has been altered to fit the project need. -->
                    <img id="cooling-lamp-one" class="cooling-lamps" src="\img\warning-grey.png" alt="Unlit Cooling Lamp">
                    <!-- End of artwork (3. flash) -->
                </div>
            </div>

            <div class="row" id="cooling-system-two">
                <div class="col-8">
                    <p class="cooling-text">Sector 2 - Cooling System</p>
                </div>
                <div class="col-4">
                    <!-- The artwork (3. flash) below has been altered from:
                    https://pixabay.com/no/advarselslampen-flash-veiarbeid-160180/
                    The artwork's colour has been altered to fit the project need. -->
                    <img id="cooling-lamp-two" class="cooling-lamps" src="\img\warning-grey.png" alt="Unlit Cooling Lamp">
                    <!-- End of artwork (3. flash) -->
                </div>
            </div>

            <div class="row" id="cooling-system-three">
                <div class="col-8">
                    <p class="cooling-text">Sector 3 - Cooling System</p>
                </div>
                <div class="col-4">
                    <!-- The artwork (3. flash) below has been altered from:
                    https://pixabay.com/no/advarselslampen-flash-veiarbeid-160180/
                    The artwork's colour has been altered to fit the project need. -->
                    <img id="cooling-lamp-three" class="cooling-lamps" src="\img\warning-grey.png" alt="Unlit Cooling Lamp">
                    <!-- End of artwork (3. flash) -->
                </div>
            </div>

            <div class="row" id="cooling-system-four">
                <div class="col-8">
                    <p class="cooling-text">Sector 4 - Cooling System</p>
                </div>
                <div class="col-4">
                    <!-- The artwork (3. flash) below has been altered from:
                    https://pixabay.com/no/advarselslampen-flash-veiarbeid-160180/
                    The artwork's colour has been altered to fit the project need. -->
                    <img id="cooling-lamp-four" class="cooling-lamps" src="\img\warning-grey.png" alt="Unlit Cooling Lamp">
                    <!-- End of artwork (3. flash) -->
                </div>
            </div>
        </div>
    </div>
</div>

<% include partials/footer %>